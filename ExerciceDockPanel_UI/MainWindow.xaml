<Window x:Class="ExerciceDockPanel_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercice DockPanel" Height="350" Width="525">
    <DockPanel>
        <TextBlock FontSize="32" Text="Choix de couleur" TextAlignment="Center" Margin="10" DockPanel.Dock="Top"/>
        <StackPanel DockPanel.Dock="Left"
                    RadioButton.Checked="SelectionnerCouleur_Checked"
                    RadioButton.Unchecked="DeselectionnerCouleur_Unchecked">
            <RadioButton Name="rdoAqua" Content="Aqua" IsChecked="True"/>
            <RadioButton Name="rdoCrimson" Content="Crimson"/>
            <RadioButton Name="rdoLime" Content="Lime"/>
            <RadioButton Name="rdoPeru" Content="Peru"/>
        </StackPanel>
        <TextBlock Text="Cégep de Thetford" DockPanel.Dock="Bottom" TextAlignment="Right"/>
        <TextBlock Name="tbCouleur" Background="Aqua"/>
    </DockPanel>
</Window>
